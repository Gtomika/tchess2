<UserControl x:Class="TChess2.View.EvaluationBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TChess2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Column="0" Grid.Row="0" Width="{StaticResource dimEvalBarWidth}"
                    Margin="{StaticResource dimMarginSmall}" BorderThickness="1" BorderBrush="Black">
        <StackPanel>
            <!-- TODO: set eval and rectangle heights dynamically. -->
            <TextBlock Width="{StaticResource dimEvalBarWidth}" Text="-M2" FontSize="{StaticResource dimFontVerySmall}"/>
            <Rectangle Fill="Black" Width="{StaticResource dimEvalBarWidth}" Height="100"/>
            <Rectangle Fill="White" Width="{StaticResource dimEvalBarWidth}" Height="100"/>
        </StackPanel>
    </Border>
</UserControl>
